<plugin>
	<extension
         point="org.eclipse.ui.activities">
      <activity
            description="%ideActivityDescription"
            id="org.eclipse.acceleo.ui.capabilities.ide"
            name="%ideActivityName">
      </activity>
      <activityPatternBinding
            activityId="org.eclipse.acceleo.ui.capabilities.ide"
            pattern="org\.eclipse\.acceleo\.ide\.ui/.*">
      </activityPatternBinding>
      <categoryActivityBinding
            activityId="org.eclipse.acceleo.ui.capabilities.ide"
            categoryId="org.eclipse.categories.developmentCategory">
      </categoryActivityBinding>
      <defaultEnablement
            id="org.eclipse.acceleo.ui.capabilities.ide">
      </defaultEnablement>
   </extension>
</plugin>
